@model User
@{
    ViewBag.Title = "Đăng nhập";
    //Layout = "~/Views/Shared/LoginNavbar.cshtml";
}

<!-- form đăng nhập -->
<div class="container mt-5" style="padding: 100px 0 100px 0;">
    <div class="frmLogin">
        <form asp-controller="Home" asp-action="LogIn"  class="container" style="width: 800px; height: 400px; padding-top: 20px;">
            <div class="title" style="text-align: center;">
                <h1>ĐĂNG NHẬP TÀI KHOẢN</h1>
                <span>Nhập email và mật khẩu của bạn:</span>
            </div>
            <div class="form-group row" style="margin-top: 20px">
                <div class="col-lg">
                    <label for="staticUsername">Username:</label>
                    <input asp-for="Username" type="text" class="form-control" id="staticUsername" placeholder="username"
                           style="padding-left: 10px; padding-top: 5px" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg">
                    <label for="inputPassword">Password:</label>
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password"
                           style="margin-top: 5px; margin-bottom: 20px;">
                    @Html.ActionLink("Bạn chưa có tài khoản ?", "SignUp", new { @style = "text-decoration: none; color: black" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg" style="text-align: center;">
                    <button type="Submit" class="btn ">Đăng nhập</button>
                </div>
        </form>
    </div>
</div>
<!-- form đăng nhập -->
