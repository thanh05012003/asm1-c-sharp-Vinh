@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption" style="margin-bottom: 200px; margin-right: 100px">
                        <div class="container">
                            <div class="row @*justify-content-start*@">
                                <div class="col-lg-6">
                                    <h1 style="color: black" class="display-2 mb-5 animated slideInDown">Organic Food Is Good For Health</h1>
                                    <a asp-controller="Home" asp-action="Prodcuts" class="btn btn-success rounded-pill py-sm-3 px-sm-5">Products</a>
                                    <a href="" class="btn btn-secondary rounded-pill py-sm-3 px-sm-5 ms-3">Services</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/carousel-2.jpg" alt="Image">
                    <div class="carousel-caption" style="margin-bottom: 200px">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-lg-7">
                                    <h1 class="display-2 mb-5 animated slideInDown">Natural Food Is Always Healthy</h1>
                                    <a href="" class="btn btn-primary rounded-pill py-sm-3 px-sm-5">Products</a>
                                    <a href="" class="btn btn-secondary rounded-pill py-sm-3 px-sm-5 ms-3">Services</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <!-- Carousel End -->
    <div class="row product">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mt-5">
                <div class="card">
                        
                        @if (System.IO.Path.GetExtension(item.ImageUrl) == ".jpg" ||
                     System.IO.Path.GetExtension(item.ImageUrl) == ".png" ||
                     System.IO.Path.GetExtension(item.ImageUrl) == ".jpeg" ||
                     System.IO.Path.GetExtension(item.ImageUrl) == ".tiff" ||
                     System.IO.Path.GetExtension(item.ImageUrl) == ".gif")
                        {
                                            <img src="/img/@item.ImageUrl" height="200">
                        }
                        else
                        {
                                            <span>Ảnh lỗi rồi =)))</span>                       
                        }

                            
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"><span class="price">@item.Price.ToString("C0")</span></p>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.ActionLink("View detail", "Details", new { id = @item.ID }, new { @class = "btn btn-outline-success btn-block" })
                            </div>
                            <div class="col-sm-6">
                                @Html.ActionLink("Add to cart", "AddToCart", new { id = @item.ID }, new { @class = "btn btn-outline-primary btn-block" })
                            </div>
                                
                        </div>
                    </div>
                </div>
            </div>
        }
</div>
<style>
    .product .btn-view-add {
    margin-top: 10px;
}

.btn-block {
    display: block;
    width: 100%;
}

.btn-outline-primary {
    color: #007bff;
    background-color: transparent;
    background-image: none;
    border-color: #007bff;
}

.btn-outline-primary:hover {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
}

.btn-outline-success {
    color: #28a745;
    background-color: transparent;
    background-image: none;
    border-color: #28a745;
}

.btn-outline-success:hover {
    color: #fff;
    background-color: #28a745;
    border-color: #28a745;
}

</style>
                        </div>
                    </a>
                </div>
            </div>
        
    </div>
</div>
